<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="@color/beige">

    <TextView
        android:id="@+id/bankaIsim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTERBANK"
        android:textColor="@color/darkblue"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060" />

    <TextView
        android:id="@+id/bilgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lütfen TC Kimlik Kartınızın Ön Yüzünün Fotoğrafını Çekiniz"
        android:textColor="@color/lightGray"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.160" />

    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="320dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/beige"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445">

        <ImageView
            android:id="@+id/tcKimlikOnYuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/tccard" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/kameraAcBtn"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:text="Kamerayı Aç"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.810"
        android:textColor="@color/white"
        android:background="@drawable/regular_button_background"
        android:textSize="14dp"
        android:textStyle="bold"
        android:clickable="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/devamEtBtn"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:text="Devam Et"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.940"
        android:textColor="@color/white"
        android:background="@drawable/inactive_button_background"
        android:textSize="14dp"
        android:textStyle="bold"
        android:clickable="true"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>